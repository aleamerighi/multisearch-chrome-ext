{
  "manifest_version": 2,
  "name": "PZL! Social MultiSearch",
  "description": "Lookup content simultaneously on Twitter, Facebook, Instagram and YouTube.",
  "version": "1.0",
  "icons": {
  "16": "images/puzzle16.png",
  "32": "images/puzzle32.png",
  "48": "images/puzzle48.png",
  "128": "images/puzzle128.png"
  },
  "permissions": [
      "tabs"
    ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ],
  "browser_action": {
   "default_popup": "popup.html",
   "default_title": "PZL! Social MultiSearch",
   "default_icon": {
     "16": "images/puzzle16.png",
     "32": "images/puzzle32.png",
     "48": "images/puzzle48.png",
     "128": "images/puzzle128.png"
   }
 }
}
